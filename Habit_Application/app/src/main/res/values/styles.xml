<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DayButtonStyle">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginHorizontal">2dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/day_button_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/main_pink</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="Toolbar_TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
    </style>

</resources>